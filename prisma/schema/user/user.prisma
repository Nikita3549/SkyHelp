model User {
  id             String   @id @default(uuid())
  email          String   @unique
  hashedPassword String   @map("hashed_password")
  name           String
  secondName     String   @map("second_name")
  role           UserRole @default(CLIENT)
  isActive       Boolean  @default(true) @map("is_acitve")
  lastSign       DateTime @default(now()) @map("last_sign")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  claims            Claim[]      @relation("UserClaims")
  claimsAsAgent     Claim[]      @relation("AgentClaims")
  messages          Message[]
  membership        ChatMember[]
  updatedProgresses Progress[]

  partner Partner?

  @@map("users")
}

enum UserRole {
  ADMIN
  PARTNER
  AGENT
  CLIENT
  LAWYER
  AFFILIATE
  ACCOUNTANT
}
