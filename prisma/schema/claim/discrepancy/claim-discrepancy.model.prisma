model ClaimDiscrepancy {
  id             String                     @id @default(uuid())
  fieldName      ClaimDiscrepancyFieldName? @map("field_name")
  passengerId    String                     @map("passenger_id")
  documentId     String                     @map("document_id")
  documentIds    String[]                   @map("document_ids")
  extractedValue String                     @map("extracted_value")
  claimId        String                     @map("claim_id")
  status         ClaimDiscrepancyStatus     @default(ACTIVE)
  createdAt      DateTime                   @default(now()) @map("created_at")
  type           DiscrepancyType            @default(PASSENGER)

  document Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  claim    Claim    @relation(fields: [claimId], references: [id], onDelete: Cascade)

  @@map("claim_discrepancy")
}
