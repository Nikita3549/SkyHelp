model Partner {
  id String @id @default(uuid())

  referralCode  String  @unique @map("referral_code")
  balance       Decimal @default(0)
  totalEarnings Decimal @default(0) @map("total_earnings")

  settingsId String?          @unique @map("settings_id")
  settings   PartnerSettings? @relation(fields: [settingsId], references: [id])

  paymentId String?         @unique @map("payment_id")
  payment   PartnerPayment? @relation(fields: [paymentId], references: [id])

  user                 User                  @relation(fields: [userId], references: [id])
  userId               String                @unique @map("user_id")
  referredClaims       Claim[]               @relation("Referrals")
  referralTransactions ReferralTransaction[]
  referralPayouts      ReferralPayout[]
  referralLinks        ReferralLink[]

  @@map("partners")
}
